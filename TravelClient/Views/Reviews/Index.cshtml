@{
    ViewData["Title"] = "Home Page";
}

<h1>New Review:</h1>

<form action="/reviews" method="post">
  <label for="name">Review's Title</label>
  <input id="name" name="name" type="text">
  <label for="content">Review's Content</label>
  <input id="content" name="content" type="text">
  <label for="rating">Review's Rating</label>
  <input id="rating" name="rating" type="number">
  <button type="submit">Go!</button>
</form>

<h1>All Reviews:</h1>

<ol>
@foreach (Review review in Model)
{
  <ul>
    <li>Review ID: @review.ReviewId</li>
    <li>Title: @review.Title</li>
    <li>Content: @review.Content</li>
    <li>Rating: @review.Rating</li>
  </ul>
  <a href="/Reviews/Details/@(review.ReviewId)"><p>View Details</p></a>
  <br>
}
</ol>